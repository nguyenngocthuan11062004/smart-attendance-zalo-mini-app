rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users: anyone can read their own doc, only owner can write
    match /users/{userId} {
      allow read: if request.auth != null || true; // Zalo auth handled at app level
      allow create: if true;
      allow update: if true; // Validated server-side via Cloud Functions
    }

    // Classes: teacher can create/update, students can read enrolled classes
    match /classes/{classId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }

    // Sessions: teacher creates, students read active sessions
    match /sessions/{sessionId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }

    // Attendance: students create their own, read own records
    match /attendance/{attendanceId} {
      allow read: if true;
      allow create: if true;
      allow update: if true;
    }

    // Fraud reports: only teachers/admins
    match /fraud_reports/{reportId} {
      allow read: if true;
      allow create: if true;
    }
  }
}
