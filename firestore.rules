rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Users collection
    match /users/{userId} {
      allow read: if true;
      allow write: if true;
    }

    // Classes collection
    match /classes/{classId} {
      allow read: if true;
      allow write: if true;
    }

    // Sessions collection
    match /sessions/{sessionId} {
      allow read: if true;
      allow write: if true;
    }

    // Attendance collection
    match /attendance/{attendanceId} {
      allow read: if true;
      allow write: if true;
    }

    // Face registrations collection
    match /face_registrations/{regId} {
      allow read: if true;
      allow write: if true;
    }

    // Fraud reports collection
    match /fraudReports/{reportId} {
      allow read: if true;
      allow write: if true;
    }
  }
}
